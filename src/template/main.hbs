
 <header class="d-flex justify-content-center py-3">
        <div class="container text-center">
            <h2>Note app</h2>
        </div>
    </header>   
    <main>
        <div class="container container-xl ">
            <table class="table table-hover  ">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Created</th>
                        <th scope="col">Category</th>
                        <th scope="col">Content</th>
                        <th scope="col">Dates</th>
                        <th scope="col" class="to-archive">Actions</th>
                    </tr>
                </thead>
                <tbody class="" id="list-of-active-notes"></tbody>
            </table>
            <button type="button" class="btn  btn-outline-dark modal-btn" data-toggle="modal" data-target="#modal">
                create note
            </button>
            <h2>Archived</h2>
              <table class="table table-hover  ">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Created</th>
                        <th scope="col">Category</th>
                        <th scope="col">Content</th>
                        <th scope="col">Dates</th>
                        <th scope="col" class="to-archive">Actions</th>
                    </tr>
                </thead>
                <tbody class="" id="list-of-archived-notes"></tbody>
            </table>
             <h2>Summary</h2>
            <div class="table-responsive-sm" >
                <table class="table table-hover ">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Note Category</th>
                            <th scope="col">
                                <svg width="16" height="16" fill="currentColor">
                                    <use xlink:href="./assets/icons/sprite.svg#active"></use>
                                </svg>
                                <span>
                                    Active
                                </span>
                            </th>
                            <th scope="col" class="archives-list">
                                <svg width="16" height="16" fill="currentColor">
                                    <use xlink:href="./assets/icons/sprite.svg#archived"></use>
                                </svg>
                                <span style="vertical-align: inherit;">
                                    Archived
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="list-of-summary-notes" class="noteList"></tbody>
                </table>
            </div>
        </div>  
            
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" 
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <form action="submit" class="modal-form">
                        <h2>Create note</h2>
                        <div class="input-group ">
                            <p>
                                <label  id="name">Name</label>
                                <input type="text" class="form-control name" label="main element" aria-label="name" name="name">
                            </p>
                        </div>                        
                        <div class="form-group">
                            <label for="category">Category</label>
                            <select class="form-control" id="category" name="category">
                                <option>Task</option>
                                <option>Random Thought</option>
                                <option>Idea</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="content">Content</label>
                            <textarea class="form-control" id="content" rows="3" name="content"></textarea>
                        </div>
                      
                    </form>
                 
                    <div class="modal-footer">
                        <button type="button" class="btn  btn-outline-dark" data-dismiss="modal">Close</button>
                        <button type="button" class="btn  btn-outline-dark save-btn" id="save-btn" data-dismiss="modal" disabled > Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
